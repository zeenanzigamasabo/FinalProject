<Window x:Class="FinalProject.ContactDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Contact Details" Height="300" Width="400">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="Contact Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,10" />
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Name: " />
                <TextBox x:Name="txtName" Width="200" />
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                <TextBlock Text="Phone: " />
                <TextBox x:Name="txtPhone" Width="200" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
